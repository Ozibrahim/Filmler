@using Entity.Entity;

@model List<Film_Tbl>

@{
}
<div class="d-flex mb-2" style="justify-content: space-between;">
<h1>Filmler</h1>

    <a  class="btn btn-primary" asp-controller="Film" asp-action="FilmEkle">Film Ekle</a>

</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="white-space:nowrap; text-align:center;">
            <th scope="col">Sıra No</th>
            <th scope="col">Kategori</th>
            <th scope="col">Yönetmen</th>
            <th scope="col">Film Adı</th>
            <th scope="col">Konusu</th>
            <th scope="col">Puanı</th>
            <th scope="col">Afiş</th>
            <th scope="col">Yapım Yılı</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                @*   <th scope="row">1</th> *@
                <td>@film.FilmId</td>
                <td>@film.Kategori.KategoriAd</td>
                <td>@film.Yonetmen.YonetmenAd @film.Yonetmen.YonetmenSoyad</td>
                <td>@film.FilmAd</td>
                <td style="width:350px;">@film.FilmKonu</td>
                <td>@film.FilmPuan</td>
                <td><img src="@film.FilmAfis" height="120" width="120"  /></td>
                <td>@film.FilmYapimYili.Value.ToString("yyyy")</td>
                <td style="width:250px;">
                    <a type="button" class="btn btn-success me-50" asp-controller="Film" asp-action="FilmGuncelle" asp-route-filmId="@film.FilmId">Güncelle</a>

                    <a type="button" class="btn btn-danger" asp-controller="Film" asp-action="FilmSil" asp-route-filmId="@film.FilmId">Sil</a>
                </td>

            </tr>

        }

    </tbody>
</table>

