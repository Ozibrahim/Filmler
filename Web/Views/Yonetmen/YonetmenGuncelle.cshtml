@using Entity.Entity;
@model Yonetmen_Tbl;
@{

}

<h1>Yönetmen Güncelle</h1>

<form asp-action="YonetmenGuncelle" asp-controller="Yonetmen" method="post">

    <input type="hidden" asp-for="YonetmenId" />

    <div class="form-group">
        <label for="yonetmenAdi">Yönetmen Adı</label>
        <input type="text" class="form-control" id="yonetmenAdi" asp-for="YonetmenAd">
    </div>

    <div class="form-group">
        <label for="yonetmenSoyadi">Yonetmen Soyadı</label>
        <input type="text" class="form-control" id="yonetmenSoyadi" asp-for="YonetmenSoyad">
    </div>

    <div class="form-group">
        <label for="yonetmenCinsiyet">Cinsiyet</label>
        <select class="custom-select" id="yonetmenCinsiyet" asp-for="YonetmenCinsiyet">


            <option value="False" selected>Kadın</option>
            <option value="True" selected>Erkek</option>

        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
</form>