@using Entity.Entity;

@model List<Yonetmen_Tbl>

@{
}
<div class="d-flex mb-2" style="justify-content: space-between;">
    <h1>Yönetmenler</h1>

    <a class="btn btn-primary" asp-controller="Yonetmen" asp-action="YonetmenEkle">Yönetmen Ekle</a>

</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="white-space:nowrap; text-align:center;">
            <th scope="col">Sıra No</th>
            <th scope="col">Yönetmen Ad</th>
            <th scope="col">Yönetmen Soyad</th>
            <th scope="col">Yönetmen Cinsiyet</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var yonetmen in Model)
        {
            <tr>
                @*   <th scope="row">1</th> *@
                <td>@yonetmen.YonetmenId</td>
                <td>@yonetmen.YonetmenAd</td>
                <td>@yonetmen.YonetmenSoyad</td>

                @if (@yonetmen.YonetmenCinsiyet == true)
                {
                    <td>Erkek</td>
                }
                else
                {
                    <td>Kadın</td>
                }

                <td>
                    <a type="button" class="btn btn-success me-50" asp-controller="Yonetmen" asp-action="YonetmenGuncelle" asp-route-YonetmenId="@yonetmen.YonetmenId">Güncelle</a>

                    <a type="button" class="btn btn-danger" asp-controller="Yonetmen" asp-action="YonetmenSil" asp-route-YonetmenId="@yonetmen.YonetmenId">Sil</a>

                </td>


            </tr>

        }

    </tbody>
</table>

