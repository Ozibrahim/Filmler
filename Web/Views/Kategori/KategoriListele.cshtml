@using Entity.Entity;

@model List<Kategori_Tbl>

@{
}
<div class="d-flex mb-2" style="justify-content: space-between;">
    <h1>Kategoriler</h1>

    <a class="btn btn-primary" asp-controller="Kategori" asp-action="KategoriEkle">Kategori Ekle</a>

</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="white-space:nowrap; text-align:center;">
            <th scope="col">Sıra No</th>
            <th scope="col">Kategori</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                @*   <th scope="row">1</th> *@
                <td>@kategori.KategoriId</td>
                <td>@kategori.KategoriAd</td>
                <td style="width:250px;">
                    <a type="button" class="btn btn-success me-50" asp-controller="Kategori" asp-action="KategoriGuncelle" asp-route-kategoriId="@kategori.KategoriId">Güncelle</a>

                    <a type="button" class="btn btn-danger" asp-controller="Kategori" asp-action="KategoriSil" asp-route-kategoriId="@kategori.KategoriId">Sil</a>
                </td>

            </tr>

        }

    </tbody>
</table>
